function init_game()
 reset_level()
 p.dir=dir_down
 p.x=door.x
 p.y=door.y
 p.oldx=p.x
 p.oldy=p.y
 p.steps=0 // will track when we've completed
 player_frame=1
 frame_timer=0
 
 // just for now clear them
 for mummy in all(mummies) do
  del(mummies,mummy)
 end
 add_mummy(13,12,dir_up)
 
 screen=scr_game 
end

