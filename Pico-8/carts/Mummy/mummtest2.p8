    spr(mup[mummy.frame], mummy.x*8, (mummy.oldy*8)-mummy.frame+1)
   elseif mummy.dir==dir_down then
    spr(mdown[mummy.frame], mummy.x*8, (mummy.oldy*8)+mummy.frame-1)
